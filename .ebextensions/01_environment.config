# .ebextensions/01_environment.config
option_settings:
  aws:elasticbeanstalk:application:environment:
    NODE_ENV: production
    PORT: 8080
    
  # For HTTPS listener
  aws:elbv2:listener:443:
    Protocol: HTTPS  # Keep SSL certificate config here
    
  # Target group settings (where IdleTimeout belongs)
  aws:elbv2:targetgroup:default:
    IdleTimeout: 600  # 600 seconds = 10 minutes
    DeregistrationDelay: 60