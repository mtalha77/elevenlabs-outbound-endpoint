---
option_settings:
  # AWS Elastic Beanstalk environment settings
  aws:elasticbeanstalk:application:environment:
    NODE_ENV: production
    # Add this environment variable with your actual domain
    PUBLIC_HOST_URL: "http://auto-dialer-production.eba-iknjcbmi.us-west-2.elasticbeanstalk.com"
  
  # WebSocket configuration for AWS
  aws:elasticbeanstalk:environment:proxy:
    ProxyServer: nginx
  
  # Increase timeout settings for WebSockets
  aws:elasticbeanstalk:environment:proxy:staticfiles:
    /static: static

files:
  "/etc/nginx/conf.d/websockets.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      # WebSocket configuration for nginx
      upstream nodejs {
        server 127.0.0.1:8080;
        keepalive 256;
      }
      
      server {
        listen 80;
        
        # Increase timeouts for WebSockets
        proxy_connect_timeout 75s;
        proxy_read_timeout 300s;
        
        location / {
          proxy_pass http://nodejs;
          proxy_http_version 1.1;
          proxy_set_header Upgrade $http_upgrade;
          proxy_set_header Connection "upgrade";
          proxy_set_header Host $host;
          proxy_set_header X-Real-IP $remote_addr;
          proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        }
        
        # Special handling for WebSocket connections
        location /outbound-media-stream {
          proxy_pass http://nodejs;
          proxy_http_version 1.1;
          proxy_set_header Upgrade $http_upgrade;
          proxy_set_header Connection "upgrade";
          proxy_set_header Host $host;
          proxy_set_header X-Real-IP $remote_addr;
          proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
          proxy_read_timeout 600s; # 10 minutes for WebSocket
          proxy_send_timeout 600s;
          proxy_buffering off;
        }
      }
  
  "/etc/nginx/conf.d/proxy.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      # Additional proxy configuration
      proxy_buffer_size 128k;
      proxy_buffers 4 256k;
      proxy_busy_buffers_size 256k;
      client_max_body_size 50M;

commands:
  01_reload_nginx:
    command: "service nginx reload"
